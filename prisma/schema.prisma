// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  accounts      Account[]
  sessions      Session[]
  prompts       Prompt[]
  feedback      Feedback[]
  templates     Template[]
  scores        PromptScore[]
  achievements  Achievement[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Prompt {
  id                String    @id @default(cuid())
  userId            String
  title             String
  description       String?
  content           String    @db.Text
  status            String    @default("draft") // draft, published, archived
  visibility        String    @default("private") // private, shared, public
  shareToken        String?   @unique
  shareTokenExpires DateTime?

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions          PromptVersion[]
  feedback          Feedback[]
  scores            PromptScore[]
  template          Template?

  tags              String[]  @default([])
  category          String?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([visibility])
}

model PromptVersion {
  id        String   @id @default(cuid())
  promptId  String
  version   Int
  content   String   @db.Text
  changeLog String?  @db.Text

  prompt    Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([promptId, version])
  @@index([promptId])
}

model Feedback {
  id        String   @id @default(cuid())
  promptId  String
  userId    String
  type      String   // "suggestion", "bug", "improvement"
  content   String   @db.Text
  status    String   @default("open") // open, in-progress, resolved

  prompt    Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([promptId])
  @@index([userId])
}

model PromptScore {
  id        String   @id @default(cuid())
  promptId  String
  userId    String
  score     Float    // 0-100
  criteria  String   @db.Text // JSON string of scored criteria
  llmScore  Float?   // Raw LLM scoring
  explanation String? @db.Text

  prompt    Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([promptId, userId])
  @@index([promptId])
  @@index([userId])
}

model Template {
  id        String   @id @default(cuid())
  userId    String
  promptId  String   @unique
  name      String
  category  String
  thumbnail String?
  isPublic  Boolean  @default(false)

  prompt    Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([category])
  @@index([isPublic])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "first_prompt", "ten_prompts", "high_scorer", etc.
  title       String
  description String?
  icon        String?
  unlockedAt  DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@unique([userId, type])
  @@index([userId])
}

model PromptLibraryItem {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  content     String   @db.Text
  category    String
  difficulty  String   // "beginner", "intermediate", "advanced"
  tags        String[] @default([])
  views       Int      @default(0)
  useful      Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([difficulty])
}

model NotificationPreference {
  id          String   @id @default(cuid())
  userId      String   @unique
  emailScore  Boolean  @default(true)
  emailFeedback Boolean @default(true)
  emailAchievement Boolean @default(true)
  pushEnabled Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
